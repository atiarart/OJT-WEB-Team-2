generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  role     String  @default("admin")
  akses    Boolean @default(false)
}

model kategori_pelatihan {
  id_kategori   Int              @id @default(autoincrement())
  nama_kategori String
  data          daftar_pelatihan[]
}

model daftar_pelatihan {
  id_pelatihan        Int     @id @default(autoincrement())
  nama_pelatihan      String?
  tujuan              String
  persyaratan         String
  materi_pembelajaran String
  instruktur          String
  sertifikasi         String
  metode_pembelajaran String
  biaya               String   @default("0")
  fasilitas           String
  contact             String

  id_kategori Int
  kategori    kategori_pelatihan @relation(fields: [id_kategori], references: [id_kategori])

  jadwal      Jadwal[]
  pendaftar   DataPendaftar[]
}

model Jadwal {
  id              Int     @id @default(autoincrement())
  bidang          String
  nama            String
  harga           Int
  jmlHari         Int
  bulan           String?
  tanggal         String?
  
  id_pelatihan    Int
  pelatihan       daftar_pelatihan @relation(fields: [id_pelatihan], references: [id_pelatihan], onDelete: Cascade)
}

model DataPendaftar {
  id           Int    @id @default(autoincrement())
  institusi    String
  alamat       String
  telepon      String
  fax          String
  email        String
  namaPeserta  String
  telPeserta   String
  emailPeserta String

  id_pelatihan Int
  pelatihan    daftar_pelatihan @relation(fields: [id_pelatihan], references: [id_pelatihan], onDelete: Cascade)

  buktiBayar   String?
  status       String   @default("MENUNGGU_BAYAR")

  peserta      DataPeserta?
}

model DataPeserta {
  id                 Int      @id @default(autoincrement())
  id_data_pendaftar  Int      @unique
  tanggal_konfirmasi DateTime @default(now())

  // Tambahan untuk sertifikat
  nomorSertifikat    String?   @unique
  fileSertifikat     String? 

  pendaftar          DataPendaftar @relation(fields: [id_data_pendaftar], references: [id], onDelete: Cascade)
}
